<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>mypkg.StartingHander</listener-class>
    </listener>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUser</servlet-name>
        <servlet-class>VerifyUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StateAccountCreationServlet</servlet-name>
        <servlet-class>StateAccountCreationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStateAdminProfile</servlet-name>
        <servlet-class>UpdateStateAdminProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveInfo</servlet-name>
        <servlet-class>SaveInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServet</servlet-name>
        <servlet-class>EndSessionServet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllStateDataServet</servlet-name>
        <servlet-class>AllStateDataServet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUser</servlet-name>
        <url-pattern>/VerifyUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StateAccountCreationServlet</servlet-name>
        <url-pattern>/StateAccountCreationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStateAdminProfile</servlet-name>
        <url-pattern>/UpdateStateAdminProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveInfo</servlet-name>
        <url-pattern>/SaveInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServet</servlet-name>
        <url-pattern>/EndSessionServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllStateDataServet</servlet-name>
        <url-pattern>/AllStateDataServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
